<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/RelatedLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/userLocation"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Your current city is:"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/twoFirstButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userLocation"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/allInquiries"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="false"
                    android:layout_weight="1"
                    android:background="#A6B1ABAB"
                    app:srcCompat="@drawable/minimalist_vintage_line_a4_stationery_paper_document__1_" />

                <ImageView
                    android:id="@+id/newHazard"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#A6B1ABAB"
                    app:srcCompat="@drawable/new_danger" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/twoSecondButtonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/twoFirstButtonLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/addNewMassage"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="#A6B1ABAB"
                    app:srcCompat="@drawable/minimalist_vintage_line_a4_stationery_paper_document__3_" />

                <ImageView
                    android:id="@+id/inquiriesHandler"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#A6B1ABAB"
                    app:srcCompat="@drawable/minimalist_vintage_line_a4_stationery_paper_document__2_" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>